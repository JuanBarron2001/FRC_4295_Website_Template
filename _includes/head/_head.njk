<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title or "Hudson Stingers Robotics"}}</title>
  
    <!-- Modern SVG favicon -->
    <link rel="icon" href="/images/icon/favicon.svg" type="image/svg+xml">
  
    <!-- PNG fallbacks -->
    <link rel="icon" type="image/png" sizes="96x96" href="/images/icon/favicon-96x96.png">
  
    <!-- Legacy ICO fallback -->
    <link rel="shortcut icon" href="/favicon.ico">
  
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icon/apple-touch-icon.png">
  
    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest">
  
    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/8af3554e29.js" crossorigin="anonymous"></script>
    
    <!-- Tailwind CSS from CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom Tailwind Configuration and Styles -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              tech: '#822008',
              dark: '#0f0f0f',
              gray: {
                950: '#0a0a0a',
                900: '#1a1a1a',
                800: '#2e2e2e',
                700: '#3a3a3a',
                600: '#4a4a4a',
                500: '#606060',
                400: '#757575',
                300: '#999999',
                200: '#d3d3d3',
                100: '#e8e8e8',
                50: '#f5f5f5',
              },
            },
            backgroundImage: {
              'gradient-dark': 'linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 50%, #2e2e2e 100%)',
              'gradient-tech': 'linear-gradient(135deg, #0f0f0f 0%, #3a3a3a 25%, #822008 50%, #3a3a3a 75%, #0f0f0f 100%)',
              'gradient-accent': 'linear-gradient(135deg, #822008 0%, #c73220 50%, #822008 100%)',
            },
            boxShadow: {
              'glow-maroon': '0 0 20px rgba(130, 32, 8, 0.5)',
              'glow-maroon-lg': '0 0 40px rgba(130, 32, 8, 0.6)',
              'tech': '0 10px 40px rgba(0, 0, 0, 0.8)',
            },
          }
        }
      }
    </script>

    <!-- Custom CSS -->
    <style>
      @layer components {
        .btn-primary {
          @apply px-6 py-3 bg-tech hover:bg-maroon-600 text-white font-semibold rounded-md shadow-lg hover:shadow-glow-maroon transition-all duration-300 active:scale-95;
        }
        .btn-primary-outline {
          @apply px-6 py-3 border-2 border-tech text-tech hover:bg-tech hover:text-white font-semibold rounded-md transition-all duration-300;
        }
        .card {
          @apply bg-gray-900 border border-gray-800 rounded-lg shadow-tech overflow-hidden;
        }
        .card-hover {
          @apply card hover:border-tech hover:border-opacity-100 hover:shadow-glow-maroon transition-all duration-300 border-opacity-30;
        }
        .section-divider {
          @apply h-1 bg-gradient-to-r from-transparent via-tech to-transparent my-12;
        }
        .form-input {
          @apply w-full bg-gray-800 border border-gray-700 rounded-md px-4 py-3 text-gray-100 placeholder-gray-500 focus:border-tech focus:outline-none focus:ring-1 focus:ring-tech transition-all duration-200;
        }
        .form-label {
          @apply block text-gray-300 font-semibold mb-2;
        }
        .heading-tech {
          @apply text-4xl md:text-5xl font-black tracking-tighter text-gray-100;
        }
        .subheading-tech {
          @apply text-xl md:text-2xl font-bold text-gray-200 mt-4;
        }
        .gradient-text-tech {
          @apply bg-gradient-to-r from-tech to-orange-400 bg-clip-text text-transparent;
        }
        .backdrop-blur-tech {
          @apply backdrop-blur-sm bg-gray-950 bg-opacity-80;
        }
      }
    </style>
  
    <!-- Lite YouTube Embed CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.3/src/lite-yt-embed.css" />
    <script src="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.3/src/lite-yt-embed.js"></script>
    
    <script data-goatcounter="https://juanbarron.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  
    {% block headMeta %}{% endblock %}
  </head>