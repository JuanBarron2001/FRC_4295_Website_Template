<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title or "Hudson Stingers Robotics"}}</title>
    
    <!-- Modern SVG favicon -->
    <link rel="icon" href="/images/icon/favicon.svg" type="image/svg+xml">

    <!-- PNG fallbacks -->
    <link rel="icon" type="image/png" sizes="96x96" href="/images/icon/favicon-96x96.png">

    <!-- Legacy ICO fallback -->
    <link rel="shortcut icon" href="/favicon.ico">

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/icon/apple-touch-icon.png">

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest">

    <!-- Fonts & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="/css/header.css" rel="stylesheet">
    <link href="/css/footer.css" rel="stylesheet">
    <link href="/css/shared.css" rel="stylesheet">
    <link href="/css/{{style or "body_gray_stripe"}}.css" rel="stylesheet">
    
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script data-goatcounter="https://juanbarron.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    
    {% block headMeta %}{% endblock %}
</head>