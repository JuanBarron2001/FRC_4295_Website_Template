{% extends "head/_head.njk" %}

{% block headMeta %}
<!-- SEO Meta -->
<meta name="description" content="Meet the members of Hudson Stingers Robotics, FRC Team 4295 at Hudson High School in Lufkin, TX. Our team includes Co-Captains {{ members.students[0].name }} and {{ members.students[1].name }}, plus talented students and experienced mentors guiding us in the FIRST Robotics Competition.">
<meta name="keywords" content="Hudson Stingers Robotics members, FRC Team 4295 students, {% for student in members.students %}{{ student.name }}{% if not loop.last %}, {% endif %}{% endfor %}, {% for mentor in members.mentors %}{{ mentor.name }}{% if not loop.last %}, {% endif %}{% endfor %}, Hudson High School robotics, FIRST Robotics Competition team, STEM education Hudson TX">

<link rel="canonical" href="https://www.hudsonrobotics4295.com/members/">
<meta name="robots" content="index, follow">

<!-- Open Graph -->
<meta property="og:type" content="website">
<meta property="og:title" content="Hudson Stingers Robotics Members | FRC Team 4295">
<meta property="og:description" content="Meet the students and mentors of Hudson Stingers Robotics, FRC Team 4295 at Hudson High School in Lufkin, TX.">
<meta property="og:url" content="https://www.hudsonrobotics4295.com/members/">
<meta property="og:image" content="https://www.hudsonrobotics4295.com/images/team-photo.jpg">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="Hudson Stingers Robotics Members | FRC Team 4295">
<meta name="twitter:description" content="Meet the students and mentors of Hudson Stingers Robotics, FRC Team 4295.">
<meta name="twitter:image" content="https://www.hudsonrobotics4295.com/images/team-photo.jpg">

<style>
  .list-group-item {
    background-color: #1e1e1e;
    border: 1px solid #444;
    color: #d3d3d3;
  }
</style>


<!-- Structured Data: Organization with members -->
<script type="application/ld+json">
{
  "@context":"https://schema.org",
  "@type":"EducationalOrganization",
  "name":"Hudson Stingers Robotics",
  "alternateName":"Hudson High School FRC Team 4295",
  "url":"https://www.hudsonrobotics4295.com/",
  "location": {
    "@type": "Place",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Lufkin",
      "addressRegion": "TX",
      "addressCountry": "US"
    }
  },
  "member":[
    {% for student in members.students %}
    {
      "@type":"Person",
      "name":"{{ student.name }}",
      "memberOf": {
        "@type": "Organization",
        "name": "Hudson Stingers Robotics"
      },
      "alumniOf": {
        "@type": "EducationalOrganization",
        "name": "Hudson High School"
      },
      {% if student.isLead or student.isCoCaptain %}
      "jobTitle":"{% if student.isCoCaptain %}Team Co-Captain{% endif %}{% if student.roles|length > 0 %}{% for role in student.roles %}{% if role != 'Team Member' %}{{ role }}{% if not loop.last %}, {% endif %}{% endif %}{% endfor %}{% endif %}",
      {% endif %}
      "description":"{{ student.specialty }} - Hudson Stingers Robotics FRC Team 4295",
      "hasOccupation": {
        "@type": "Occupation",
        "name": "FIRST Robotics Competition Student",
        "occupationLocation": {
          "@type": "City",
          "name": "Lufkin, TX"
        }
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
    {% for mentor in members.mentors %},
    {
      "@type":"Person",
      "name":"{{ mentor.name }}",
      "jobTitle":"{{ mentor.role }}",
      "memberOf": {
        "@type": "Organization",
        "name": "Hudson Stingers Robotics"
      },
      "description":"{{ mentor.role }} for Hudson Stingers Robotics FRC Team 4295",
      "hasOccupation": {
        "@type": "Occupation",
        "name": "FIRST Robotics Competition Mentor",
        "occupationLocation": {
          "@type": "City",
          "name": "Lufkin, TX"
        }
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
{% endblock %}